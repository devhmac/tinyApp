<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(username) { %>
      <form action="/logout" class="form-inline" method="POST">
        <a class="navbar-brand">
          <%= username %>
        </a>
        <button type="submit" class="btn btn-danger">Logout</button>
      </form>
      <% } %>
        <% if(username===undefined) { %>
          <form action="/login" class="form-inline" method="POST">
            <div class="form-group">
              <input type="text" name="username" id="" placeholder="Username" class="form-control me-2"
                style="width: 150px; margin: 0.5em">
              <button type="submit" class="btn btn-secondary">Login</button>
            </div>
          </form>
          <% } %>
  </nav>
</header>